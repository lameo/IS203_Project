<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>processLogin</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>report</servlet-name>
        <servlet-class>controller.ReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>processLogout</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>processUpload</servlet-name>
        <servlet-class>controller.UploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>processHeatMap</servlet-name>
        <servlet-class>controller.HeatMapServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AutoGroup</servlet-name>
        <servlet-class>controller.AutoGroupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>processUpdate</servlet-name>
        <servlet-class>controller.UpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Authenticate</servlet-name>
        <servlet-class>json.Authenticate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Heatmap</servlet-name>
        <servlet-class>json.Heatmap</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TopKNextPlaces</servlet-name>
        <servlet-class>json.TopKNextPlaces</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>processLogin</servlet-name>
        <url-pattern>/processLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>report</servlet-name>
        <url-pattern>/report</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>processLogout</servlet-name>
        <url-pattern>/processLogout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>processUpload</servlet-name>
        <url-pattern>/processUpload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>processHeatMap</servlet-name>
        <url-pattern>/processHeatMap</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AutoGroup</servlet-name>
        <url-pattern>/AutoGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>processUpdate</servlet-name>
        <url-pattern>/processUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Authenticate</servlet-name>
        <url-pattern>/Authenticate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Heatmap</servlet-name>
        <url-pattern>/Heatmap</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TopKNextPlaces</servlet-name>
        <url-pattern>/TopKNextPlaces</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
